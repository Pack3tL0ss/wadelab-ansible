{%- if ntp -%}
    {%- if ntp["servers"] -%}
        {% for svr in ntp["servers"] -%}
            ntp server {{ svr }}
        {% endfor %}
    {% endif %}
    ntp enable
    ntp vrf {{ ntp["vrf"]|default("default") }}
{%- endif -%}
