{# -- // VLAN INTERFACEs \\ -- #}
interface vlan 1
    ip dhcp
{% for vlan in vlans %}
    {% if vlan.ip_mask is defined and vlan.ip_mask %}
interface vlan {{ vlan.pvid }}
        {% if vlan.name is defined %}
    description {{ vlan.name }}
        {% endif %}
    ip address {{ vlan.ip_mask }}
    {% if vlan.ipv6_mask is defined %}
    ipv6 address {{ vlan.ipv6_mask }}
    {% endif %}
        {% if vlan.ospf_proc is defined %}
    ip ospf {{ vlan.ospf_proc }} area {{ vlan.ospf_area|default('0.0.0.0') }}
            {% if vlan.ospf_passive is defined %}
                {% if vlan.ospf_passive %}
    ip ospf passive
                {% else %}
    no ip ospf passive
                {% endif %}
            {% endif %}
        {% endif %}
        {% if vlan.igmp is defined and vlan.igmp %}
    ip igmp enable
        {% endif %}
        {% if vlan.pim_sm is defined and vlan.pim_sm %}
    ip pim-sparse enable
        {% endif %}
        {% if vlan.ip_mtu is defined %}
    ip mtu {{ vlan.ip_mtu }}
        {% endif %}
    {% endif %}
{% endfor %}
!
{# -- // VxLAN \\ -- #}
{% if vxlan is defined and vxlan|length %}
    {% for vx in vxlan -%}
    interface vxlan {{ vx.id }}
        {% if vx.source_ip is defined %}
        source ip {{ vx.source_ip }}
        {% endif %}
        {% if vx.shutdown is defined  %}
            {% if vx.shutdown %}
        shutdown
            {% else %}
        no shutdown
            {% endif %}
        {% endif %}
        {% if vx.vni and vx.vni|length %}
            {% for vni in vx.vnis %}
        vni {{ vni.id }}
            vlan {{ vni.vlan }}
            {% endfor %}
        {% endif %}
    {% endfor %}
{% endif %}
!
{# -- // STP \\ -- #}
{% if stp is defined and stp|length %}
    {% for stp_line in stp -%}
        {{ stp_line }}
    {% endfor %}
{% endif %}
{# -- // OOBM \\ -- #}
interface mgmt
{% if oobm  is defined and oobm|length %}
    {% for oobm_line in oobm %}
    {{ oobm_line }}
    {% endfor %}
{% else %}
    no shutdown
    ip dhcp
{% endif %}
{# -- // UBT \\ -- #}
{% if ubt is defined and ubt|length %}
    {% if ubt.client_vlan is defined %}
ubt-client-vlan {{ ubt.client_vlan }}
ubt zone {{ ubt.zone }} vrf {{ ubt.vrf|default('default', true) }}
    primary-controller ip {{ ubt.primary }}
        {% if ubt.backup is defined %}
    backup-controller ip {{ ubt.backup }}
        {% endif %}
        {% if ubt.sac_hb %}
    sac-heartbeat-interval {{ ubt.sac_hb }}
        {% endif %}
        {% if ubt.uac_ka %}
    uac-keepalive-interval {{ ubt.uac_ka }}
        {% endif %}
        {% if ubt.enable is not defined or ubt.enable %}
    enable
        {% endif %}
    {% endif %}
{% endif %}
{# -- // SNMP \\ -- #}
{% if snmp is defined and snmp|length %}
    {% for line in snmp -%}
        {{ line }}
    {% endfor %}
{% endif %}
{# -- // STATIC ROUTES \\ -- #}
{% if static_routes is defined and static_routes %}
    {% if static_routes.v4 is defined %}
        {% for r in static_routes.v4 -%}
            ip route {{r}}
        {% endfor %}
    {% endif %}
    {% if static_routes.v6 is defined %}
        {% for r in static_routes.v6 -%}
            ipv6 route {{r}}
        {% endfor %}
    {% endif %}
{% endif %}
{# -- // DNS \\ -- #}
{% if dns is defined %}
    {% if dns.domain is defined%}
ip dns domain-name {{ dns.domain }}
    {% endif %}
    {% if dns.servers is defined and dns.servers %}
        {% for svr in dns.servers %}
            {% if svr.vrfs is defined %}
                {% if svr.vrfs is not string %}
                    {% for vrf in svr.vrfs %}
                        {% if vrf != "default" %}
ip dns server-address {{ svr.host }} vrf {{ vrf }}
                        {% else %}
ip dns server-address {{ svr.host }}
                        {% endif %}
                    {% endfor %}
                {% else %}
                    {% if svr.vrfs != "default" %}
ip dns server-address {{ svr.host }} vrf {{ svr.vrfs }}
                    {% else %}
ip dns server-address {{ svr.host }}
                    {% endif %}
                {% endif %}
            {% else %}
ip dns server-address {{ svr.host }}
            {% endif %}
        {% endfor %}
    {% endif %}
{% endif %}
